<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <!-- Toolbar (상단 타이틀 및 뒤로가기 버튼) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EA"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 타이틀 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자 설정"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 거리 설정 (m):" />

    <SeekBar
        android:id="@+id/seekBarDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 거리: 0m" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 음량 설정:" />

    <SeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 음량: 50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 주기 설정:" />

    <Spinner
        android:id="@+id/spinnerInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkBoxPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="우산 찾기 알림 활성화" />

    <CheckBox
        android:id="@+id/checkBoxLocationLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치 기록 활성화" />

    <CheckBox
        android:id="@+id/checkBoxUpdateAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업데이트 알림 받기" />

    <CheckBox
        android:id="@+id/checkBoxDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다크 모드 사용" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정 저장"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />
</LinearLayout>
